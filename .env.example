# PlayTogether - Environment Configuration
# Copy this file to .env and adjust values as needed

# ===========================================
# Server Configuration
# ===========================================

# Environment (development | production)
NODE_ENV=production

# Server port (internal)
SERVER_PORT=3001

# Client URL for CORS
CLIENT_URL=http://localhost

# ===========================================
# Client Configuration
# ===========================================

# Client port (external)
CLIENT_PORT=80

# Server URL for WebSocket connection (must be accessible from browser)
VITE_SERVER_URL=http://localhost:3001

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL
POSTGRES_USER=playtogether
POSTGRES_PASSWORD=playtogether_secret
POSTGRES_DB=playtogether
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# ===========================================
# Security
# ===========================================

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change_this_to_a_long_random_string_in_production

# Session secret
SESSION_SECRET=another_random_string_here

# ===========================================
# Docker Configuration
# ===========================================

# Compose project name
COMPOSE_PROJECT_NAME=playtogether
